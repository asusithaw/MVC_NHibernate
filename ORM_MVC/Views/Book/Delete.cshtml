@model Book
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Book ID: @Model.Id</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Title</dt>
            <dd>@Model.Title</dd>
            <dt>Author</dt>
            <dd>@Model.Author</dd>

        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
   
}